@page
@model WebShopRP.Pages.Orders.EditModel
@{
}

<h1 class="display-3 mb-5">Edit Order</h1>

<form method="post">
	<div class="form-group" hidden>
		<label asp-for="@Model.Data.Id" class="control-label"></label>
		<input asp-for="@Model.Data.Id" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.CustomerId" class="control-label"></label>
		<select asp-for="@Model.Data.CustomerId" asp-items="@Model.CustomerList" class="form-control"></select>
		<span asp-validation-for="@Model.Data.CustomerId" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.ProductId" class="control-label"></label>
		<select asp-for="@Model.Data.ProductId" asp-items="@Model.ProductList" class="form-control"></select>
		<span asp-validation-for="@Model.Data.ProductId" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Amount" class="control-label"></label>
		<input asp-for="@Model.Data.Amount" class="form-control" type="number" />
		<span asp-validation-for="@Model.Data.Amount" class="text-danger"></span>
	</div>

	<p>
		<div class="form-group mb-3">
			<input type="submit" value="Update" class="btn btn-outline-primary" />
		</div>
	</p>
</form>
